<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-8">
    <% @gists.each do |gist| %>
      <div class="gist">
        <div class="gist-meta">
          <%= gist.created_at.to_s(:long) %> by <%= gist.user.email %>
          <a href="<%= gist_path(gist) %>#comments" class="comment-counter pull-right"><%= gist.comments.length %> Comments</a>
          <div class="gist-description"><%= gist.description %></div>
        </div>

        <a href="<%= gist_path(gist) %>" class="gist">
          <pre><code><%= gist.content.split("\n").take(4).join("\n") %></code></pre>
        </a>
      </div>
    <% end %>
  </div>

  <div class="col-md-2"></div>
<div class="row">