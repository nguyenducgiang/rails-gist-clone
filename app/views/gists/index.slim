.row
  .col-md-2
  .col-md-8
    - @gists.each do |gist|
      .gist
        .gist-meta
          .row
            .col-md-1 = gravatar_img(gist.user.email)
            .col-md-11
              .pull-right
                a.comment-counter href="{gist_path(gist)}#comments"
                  span class="glyphicon glyphicon-comment"
                  = " #{gist.comments.count} comments"
              .gist-description = gist.description
              = "#{time_ago_in_words(gist.created_at)} ago by #{gist.user.email}"

        a.gist href=gist_path(gist) = gist.highlighted(lines: 10)
  .col-md-2